<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:svgimageview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20">
    <FrameLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="16"
        android:background="@color/semi_dark"
        android:clipChildren="false"
        android:id="@+id/head_frame">
        <FrameLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="16"
            android:background="@color/primary"
            android:layout_marginBottom="2dp"
            android:clipChildren="false">
            <com.caverock.androidsvg.SVGImageView
                android:id="@+id/svg_logo"
                svgimageview:svg="@drawable/signalize"
                android:layout_width="550dp"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:scaleType="centerCrop"
                android:padding="0dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="start"/>
        </FrameLayout>
    </FrameLayout>
    <FrameLayout android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:id="@+id/main_frame"
        android:background="@color/white">
        <ListView
            android:id="@+id/menu_list"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:divider="@color/semi_dark"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/list_selector" />

    </FrameLayout>
</LinearLayout>
    <FrameLayout
        android:layout_marginTop="100dp"
        android:layout_marginRight="25dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:id="@+id/mic_shadow"
        android:clickable="true"
        android:focusable="true"
        android:clipChildren="false"
        android:background="@drawable/circle_shadow"
        android:layout_gravity="end">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/mic_box"
            android:clickable="true"
            android:focusable="true"
            android:clipChildren="false"
            android:background="@drawable/circle_button"
            android:layout_gravity="end">
            <com.caverock.androidsvg.SVGImageView
                android:id="@+id/svg_mic"
                svgimageview:svg="@drawable/microphone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"/>
        </FrameLayout>
    </FrameLayout>

</FrameLayout>