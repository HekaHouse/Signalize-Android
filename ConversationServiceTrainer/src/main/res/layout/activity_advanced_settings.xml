<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ppc.signalize.mira.conversation.conversationservicetrainer.conversationservicetrainer.AdvancedSettings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/Red"
                android:text="@string/current"
                android:textSize="@dimen/mediumText"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/Black"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <EditText
                android:text="@string/currentResponse"
                android:singleLine="false"
                android:layout_width="match_parent"
                android:lines="5"
                android:scrollbars="vertical"
                android:maxLines="10"
                android:gravity="top"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/Black"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/add_template_tag"
                    android:text="@string/template_button"
                    android:textSize="@dimen/smallText"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/add_random_tag"
                    android:text="@string/randomli_button"
                    android:textSize="@dimen/smallText"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_srai_spinner"
                    android:prompt="@string/srai_spinner"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <Button
                android:text="@string/set_response"
                android:textSize="@dimen/mediumText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
