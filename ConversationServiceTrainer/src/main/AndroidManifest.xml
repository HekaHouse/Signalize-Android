<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ppc.signalize.mira.conversation.conversationservicetrainer.conversationservicetrainer" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TrainerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FileActivity"
            android:label="@string/title_activity_file" >
        </activity>
        <activity
            android:name=".ViewFileActivity"
            android:label="@string/title_activity_view_file" >
        </activity>
        <activity
            android:name=".AdvancedSettings"
            android:label="@string/title_activity_advanced_settings"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".DeleteReduction"
            android:label="Delete Reduction"/>
    </application>

</manifest>
